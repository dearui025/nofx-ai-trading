# ===========================================
# NOFX AI交易系统 - Railway部署环境变量
# ===========================================

# Railway基础配置
PORT=${{RAILWAY_PORT}}
GO_ENV=production
API_SERVER_PORT=${{RAILWAY_PORT}}
RAILWAY_ENVIRONMENT=production

# 数据库配置（Railway PostgreSQL）
# 在Railway控制台中添加PostgreSQL服务后，会自动提供以下变量：
# DATABASE_URL=${{DATABASE_URL}}
# POSTGRES_HOST=${{POSTGRES_HOST}}
# POSTGRES_PORT=${{POSTGRES_PORT}}
# POSTGRES_USER=${{POSTGRES_USER}}
# POSTGRES_PASSWORD=${{POSTGRES_PASSWORD}}
# POSTGRES_DB=${{POSTGRES_DB}}

# 币安API配置（需要在Railway控制台中设置）
BINANCE_API_KEY=${{BINANCE_API_KEY}}
BINANCE_SECRET_KEY=${{BINANCE_SECRET_KEY}}
BINANCE_TESTNET=false

# Hyperliquid配置（需要在Railway控制台中设置）
HYPERLIQUID_PRIVATE_KEY=${{HYPERLIQUID_PRIVATE_KEY}}
HYPERLIQUID_WALLET_ADDR=${{HYPERLIQUID_WALLET_ADDR}}
HYPERLIQUID_TESTNET=false

# Aster配置（需要在Railway控制台中设置）
ASTER_USER=${{ASTER_USER}}
ASTER_SIGNER=${{ASTER_SIGNER}}
ASTER_PRIVATE_KEY=${{ASTER_PRIVATE_KEY}}

# AI模型API配置（需要在Railway控制台中设置）
QWEN_API_KEY=${{QWEN_API_KEY}}
DEEPSEEK_API_KEY=${{DEEPSEEK_API_KEY}}

# 自定义API配置（可选）
CUSTOM_API_URL=${{CUSTOM_API_URL}}
CUSTOM_API_KEY=${{CUSTOM_API_KEY}}
CUSTOM_MODEL_NAME=${{CUSTOM_MODEL_NAME}}

# 风控参数
MAX_DAILY_LOSS=10.0
MAX_DRAWDOWN=20.0
STOP_TRADING_MINUTES=60

# 杠杆配置
BTC_ETH_LEVERAGE=5
ALTCOIN_LEVERAGE=5

# 币种池配置
USE_DEFAULT_COINS=true
DEFAULT_COINS=BTCUSDT,ETHUSDT,SOLUSDT,BNBUSDT,XRPUSDT,DOGEUSDT,ADAUSDT,HYPEUSDT

# 外部API配置（可选）
COIN_POOL_API_URL=${{COIN_POOL_API_URL}}
OI_TOP_API_URL=${{OI_TOP_API_URL}}

# 前端配置（Railway会自动提供域名）
VITE_API_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}
VITE_WS_URL=wss://${{RAILWAY_PUBLIC_DOMAIN}}
VITE_APP_NAME=NOFX AI Trading System
VITE_APP_VERSION=1.0.0

# Supabase配置（如果使用）
VITE_SUPABASE_URL=${{VITE_SUPABASE_URL}}
VITE_SUPABASE_ANON_KEY=${{VITE_SUPABASE_ANON_KEY}}

# JWT配置
JWT_SECRET=${{JWT_SECRET}}
JWT_EXPIRES_IN=24h

# Redis配置（Railway Redis服务）
# REDIS_URL=${{REDIS_URL}}
# REDIS_HOST=${{REDIS_HOST}}
# REDIS_PORT=${{REDIS_PORT}}
# REDIS_PASSWORD=${{REDIS_PASSWORD}}

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info

# Railway特定配置
RAILWAY_PROJECT_ID=d9845ff4-c4a3-4c5d-8e9f-db95151d21bc
RAILWAY_SERVICE_NAME=api
RAILWAY_REGION=us-west1

# 健康检查配置
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_PORT=${{RAILWAY_PORT}}

# 时区配置
TZ=UTC

# 应用配置
APP_NAME=NOFX-AI-Trading
APP_VERSION=1.0.0
APP_ENV=production