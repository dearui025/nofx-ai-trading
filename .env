# ===========================================
# NOFX AI交易系统 - Zeabur部署环境变量
# ===========================================

# 基础配置
PORT=8080
GO_ENV=production
API_SERVER_PORT=8080

# 数据库配置（Zeabur PostgreSQL）
DATABASE_URL=postgresql://username:password@host:port/database_name

# 币安API配置
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=false

# Hyperliquid配置
HYPERLIQUID_PRIVATE_KEY=your_ethereum_private_key_without_0x
HYPERLIQUID_WALLET_ADDR=your_ethereum_wallet_address
HYPERLIQUID_TESTNET=false

# Aster配置
ASTER_USER=your_main_wallet_address
ASTER_SIGNER=your_api_wallet_address
ASTER_PRIVATE_KEY=your_api_wallet_private_key_without_0x

# AI模型API配置
QWEN_API_KEY=your_qwen_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# 自定义API配置（可选）
CUSTOM_API_URL=https://api.openai.com/v1
CUSTOM_API_KEY=sk-your-custom-api-key
CUSTOM_MODEL_NAME=gpt-4o

# 风控参数
MAX_DAILY_LOSS=10.0
MAX_DRAWDOWN=20.0
STOP_TRADING_MINUTES=60

# 杠杆配置
BTC_ETH_LEVERAGE=5
ALTCOIN_LEVERAGE=5

# 币种池配置
USE_DEFAULT_COINS=true
DEFAULT_COINS=BTCUSDT,ETHUSDT,SOLUSDT,BNBUSDT,XRPUSDT,DOGEUSDT,ADAUSDT,HYPEUSDT

# 外部API配置（可选）
COIN_POOL_API_URL=
OI_TOP_API_URL=

# 前端配置（将在Zeabur部署时更新）
VITE_API_URL=https://your-backend-domain.zeabur.app
VITE_WS_URL=wss://your-backend-domain.zeabur.app
VITE_APP_NAME=NOFX AI Trading System
VITE_APP_VERSION=1.0.0

# Supabase配置（如果使用）
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# JWT配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Redis配置（如果使用缓存）
REDIS_URL=redis://username:password@host:port

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info

# Zeabur特定配置
ZEABUR_ENVIRONMENT=production
ZEABUR_REGION=ap-east-1